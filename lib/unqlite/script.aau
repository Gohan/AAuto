	unqlite_value_is_float= dll.api("unqlite_value_is_float","int(POINTER pVal)","cdecl");
	unqlite_value_is_bool= dll.api("unqlite_value_is_bool","int(POINTER pVal)","cdecl");
	unqlite_value_is_string= dll.api("unqlite_value_is_string","int(POINTER pVal)","cdecl");
	unqlite_value_is_null= dll.api("unqlite_value_is_null","int(POINTER pVal)","cdecl");
	unqlite_value_is_numeric= dll.api("unqlite_value_is_numeric","int(POINTER pVal)","cdecl");
	unqlite_value_is_callable= dll.api("unqlite_value_is_callable","int(POINTER pVal)","cdecl");
	unqlite_value_is_scalar= dll.api("unqlite_value_is_scalar","int(POINTER pVal)","cdecl");
